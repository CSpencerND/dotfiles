[bar/example]
override-redirect = true
wm-name = awesome
width = 100%
height = 28
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true
bottom = false

background = #e6282a36
foreground = #f8f8f2

line-size = 2
; line-color = ${colors.primary}

padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 1

font-0 = Weather Icons:size=14;1
font-1 = Hack Nerd Font:pixelsize=12;
font-2 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;

enable-ipc = true

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
; tray-detached = false
; tray-maxsize = 20
tray-padding = 4
tray-background = #77282a36
tray-transparent = true
; tray-offset-x = 0
; tray-offset-y = 0
; tray-scale = 1.0


; ---------------- MODULES ----------------- ;

modules-left = ewmh xwindow 
modules-center = date clock weather 
modules-right = usb network memory cpu battery 


[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = false

label-active = %index%
label-occupied = %index%
label-urgent = %index%
label-empty = 

label-active-background = #55bd93f9
label-active-underline = #77bd93f9

label-active-padding = 1
label-occupied-padding = 1
label-empty-padding = 1
label-urgent-padding = 1

format-background = #0054576a
format-underline =
format-padding = 0


[module/xwindow]
type = internal/xwindow
label = "%title%"
format-background = #55bd93f9
format-underline =
format-margin = 0
label-maxlen = 65


[module/date]
type = custom/script
exec = date +"%a %b %e, %Y"
label = "📅 %output%"
interval = 60
format-padding = 1
click-left = setsid -f "$TERMINAL" -e calcurse && sleep .18 && xdotool key super+shift+m



[module/clock]
type = custom/script
exec = ~/.local/bin/polyscr/poly-clock
interval = 60
; tail = true


[module/weather]
type = custom/script
exec = ~/.local/bin/polyscr/openweathermap-fullfeatured.sh
interval = 3600
click-left = ~/.local/bin/polyscr/wttr-bttn 
click-right = ~/.local/bin/polyscr/wttr-update


; [module/forecast]
; type = custom/script
; exec = forecast
; interval = 1800
; tail = true
 

; [module/moon]
; type = custom/script
; exec = moonphase
; interval = 43200
; tail = true


[module/usb]
type = custom/script
exec = ~/.local/bin/polyscr/system-usb-udev.sh 
tail = true
click-left = ~/.local/bin/polyscr/usb-tool --open
click-right = ~/.local/bin/polyscr/usb-tool --dismount


; [module/vol]
; type = custom/ipc
; exec = volume


[module/network]
type = custom/script
exec = ~/.local/bin/polyscr/nettraff
; interval = 5
tail = true


[module/memory]
type = custom/script
exec = ~/.local/bin/polyscr/memory
interval = 10
; tail = true
click-left = notify-send "🧠 Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)"
click-right = setsid -f "$TERMINAL" -e bpytop && sleep .18 && xdotool key super+shift+m


[module/cpu]
type = custom/script
exec = ~/.local/bin/polyscr/poly-cpu
interval = 10
; tail = true
click-left = notify-send "🖥 CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)"
click-right = setsid -f "$TERMINAL" -e htop && sleep .18 && xdotool key super+shift+m


[module/battery]
type = custom/script
exec = ~/.local/bin/polyscr/battery-combined-udev.sh
; interval = 300
; tail = true


; [module/doppler]
; type = custom/script
; exec = doppler
; interval = 1800
; tail = true


; [module/internet]
; type = custom/script
; exec = internet
; interval = 60
; tail = true


; [module/time]
; type = custom/script
; exec = date +"%I:%M %P"
; label = "%output%"
; interval = 60
