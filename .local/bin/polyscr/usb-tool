#!/bin/zsh

DEVICE_NAME=$(udisksctl info -b /dev/sda1 | awk '/IdLabel/ {print $2}')


if [[ $1 = "--open" ]]; then
  if [[ $DEVICE_NAME = "Backup" ]]; then
    setsid -f "$TERMINAL" -e sudo timeshift --check;
  fi
fi


if [[ $1 = "--dismount" ]]; then
  udisksctl unmount --no-user-interaction -b /dev/sda1 && wait && \
  udisksctl power-off --no-user-interaction -b /dev/sda1; 
fi

