#!/bin/sh

weatherreport="$XDG_CACHE_HOME/weatherreport"
# curl -sf "wttr.in/$LOCATION" > "$weatherreport" || exit 1;

[ "$(stat -c %y "$weatherreport" 2>/dev/null | \
  cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] || \
  curl -sf "wttr.in/$LOCATION" > "$weatherreport" || exit 1;
  # getforecast

setsid -f "$TERMINAL" -e less -Srf $weatherreport \
  && sleep .2 && xdotool key super+shift+m;

