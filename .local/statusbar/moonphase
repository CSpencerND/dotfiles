#!/usr/bin/env bash

x=0
until [ "$x" -ge 3 ]; do
  curl -sf "wttr.in/?format=%m" > ~/.cache/moonphase && break
  x=$((x+1))
  sleep 1
done

icon="$(cat ~/.cache/moonphase)"

case "$icon" in
	 ) name="New" ;;
	 ) name="Waxing Crescent" ;;
	 ) name="First Quarter" ;;
	 ) name="Waxing Gibbous" ;;
	 ) name="Full" ;;
	 ) name="Waning Gibbous" ;;
	 ) name="Last Quarter" ;;
	 ) name="Waning Crescent" ;;
	*) exit 1 ;;
esac

