#!/usr/bin/env bash

clock=$(date '+%I')

case "$clock" in
	"00") icon="ðŸ•›" ;; # îŽ
	"01") icon="ðŸ•" ;; # îŽ‚
	"02") icon="ðŸ•‘" ;; # îŽƒ
	"03") icon="ðŸ•’" ;; # îŽ„
	"04") icon="ðŸ•“" ;; # îŽ…
	"05") icon="ðŸ•”" ;; # îŽ†
	"06") icon="ðŸ••" ;; # îŽ‡
	"07") icon="ðŸ•–" ;; # îŽˆ
	"08") icon="ðŸ•—" ;; # îŽ‰
	"09") icon="ðŸ•˜" ;; # îŽŠ
	"10") icon="ðŸ•™" ;; # îŽ‹
	"11") icon="ðŸ•š" ;; # îŽŒ
	"12") icon="ðŸ•›" ;; # îŽ
esac

echo $icon > ~/.cache/clock-icon
qtile cmd-obj -o widget clock_icon -f update -a $icon

