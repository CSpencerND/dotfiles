#!/usr/bin/env bash

clock=$(date '+%I')

case "$clock" in
	"00") icon="îŽ" ;; # îŽ  ðŸ•›
	"01") icon="îŽ‚" ;; # îŽ‚  ðŸ•
	"02") icon="îŽƒ" ;; # îŽƒ  ðŸ•‘
	"03") icon="îŽ„" ;; # îŽ„  ðŸ•’
	"04") icon="îŽ…" ;; # îŽ…  ðŸ•“
	"05") icon="îŽ†" ;; # îŽ†  ðŸ•”
	"06") icon="îŽ‡" ;; # îŽ‡  ðŸ••
	"07") icon="îŽˆ" ;; # îŽˆ  ðŸ•–
	"08") icon="îŽ‰" ;; # îŽ‰  ðŸ•—
	"09") icon="îŽŠ" ;; # îŽŠ  ðŸ•˜
	"10") icon="îŽ‹" ;; # îŽ‹  ðŸ•™
	"11") icon="îŽŒ" ;; # îŽŒ  ðŸ•š
	"12") icon="îŽ" ;; # îŽ  ðŸ•›
esac

echo $icon > ~/.cache/clock-icon
qtile cmd-obj -o widget clock_icon -f update -a $icon

